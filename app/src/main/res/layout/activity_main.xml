<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background_play2"
    tools:context=".MusicPlayerActivity">

    <ImageView
        android:id="@+id/btnback"
        android:layout_width="33dp"
        android:layout_height="33dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="21dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="42dp"
        android:background="@drawable/back"
        />

    <View
        android:layout_width="354dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/buttonblack" />

    <ImageView
        android:id="@+id/btnPrev"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="90dp"
        android:layout_marginBottom="65dp"
        android:src="@drawable/ic_prev"/>

    <ImageView
        android:id="@+id/btnNext"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="90dp"
        android:layout_marginBottom="65dp"
        android:background="@drawable/ic_next"/>

    <ImageView
        android:id="@+id/btnPlay"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="59dp"
        />

    <Button
        android:id="@+id/btnShuffle"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="210dp"
        android:layout_marginLeft="100dp"
        android:background="@drawable/shuffle"/>

    <Button
        android:id="@+id/btnFavorite"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="210dp"
        android:background="@drawable/favorite"/>

    <Button
        android:id="@+id/btnRepeat"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="210dp"
        android:layout_marginRight="100dp"
        android:background="@drawable/repeat"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/muxkaset"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/mux"
        />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/progress_song"
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/progress_song"
        android:layout_centerInParent="true"/>

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/progress_song"
        android:layout_alignTop="@+id/progress_song"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-106dp"
        android:layout_marginBottom="76dp"
        android:fontFamily="@font/astrospace_font"
        android:text="me_too"
        android:textAppearance="@style/me_too"
        android:textSize="18sp"
        android:textAlignment="center"
        android:textStyle="bold" />

    <SeekBar
        android:id="@+id/seekBarTime"
        android:layout_width="fill_parent"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="40dp"
        android:progressTint="@color/main_bar_active"
        android:progress="40"
        android:thumbTint="@color/main_bar_active"
        android:progressBackgroundTint="@color/main_bar_no_active"
        android:backgroundTint="@color/main_bar_no_active"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="140dp"
        android:layout_height="wrap_content" />

</RelativeLayout>
