<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background_play2"
    tools:context=".MusicPlayerActivity">

    <Button
        android:id="@+id/back"
        android:layout_width="33dp"
        android:layout_height="33dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="21dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="42dp"
        android:background="@drawable/back"
        />

    <Button
        android:id="@+id/btnPrev"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="90dp"
        android:layout_marginBottom="65dp"
        android:background="@drawable/ic_prev"/>

    <Button
        android:id="@+id/btnNext"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="90dp"
        android:layout_marginBottom="65dp"
        android:background="@drawable/ic_next"/>

    <Button
        android:id="@+id/btnPlay"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="49dp"
        android:background="@drawable/ic_baseline_play_circle_filled_24_white"/>

    <Button
        android:id="@+id/btnShuffle"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="210dp"
        android:layout_marginLeft="100dp"
        android:background="@drawable/shuffle"/>

    <Button
        android:id="@+id/btnFavorite"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="210dp"
        android:background="@drawable/favorite"/>

    <Button
        android:id="@+id/btnRepeat"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="210dp"
        android:layout_marginRight="100dp"
        android:background="@drawable/repeat"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/muxkaset"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:src="@drawable/mux"
        />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/progress_song"
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:src="@drawable/progress_song"
        android:layout_centerInParent="true"/>

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/progress_song"
        android:layout_alignTop="@+id/progress_song"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-106dp"
        android:layout_marginBottom="76dp"
        android:fontFamily="@font/astrospace_font"
        android:text="me_too"
        android:textAppearance="@style/me_too"
        android:textSize="20dp"
        android:textAlignment="center"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvArtist"
        android:layout_width="wrap_content"
        android:layout_height="29dp"
        android:layout_above="@+id/progress_song"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="170dp"
        android:layout_marginBottom="47dp"
        android:fontFamily="@font/astrospace_font"
        android:text="meghan_tain"
        android:textAppearance="@style/meghan_tain"
        android:textSize="13dp"
        android:textAlignment="center" />

    <SeekBar
        android:id="@+id/seekBarTime"
        android:layout_width="fill_parent"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="40dp"
        android:progressTint="@color/black"
        android:progress="40"
        android:thumbTint="@color/black"
        android:backgroundTint="#fff"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="140dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:fontFamily="@font/roboto"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="40dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="155dp"
        android:textSize="20dp"
        android:text="00:00"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tvDuration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:fontFamily="@font/roboto"
        android:layout_alignParentRight="true"
        android:layout_marginRight="40dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="155dp"
        android:textSize="20dp"
        android:text="00:00"
        android:textStyle="bold"/>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/buttonblack" />

</RelativeLayout>